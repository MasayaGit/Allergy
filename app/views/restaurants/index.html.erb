<h2>
  Restaurant List
</h2>
<ul>
  <% i = 0 %>
  <% @restaurants.each do |r| %>
  
  <li>
    <% if @showFlag[i] %>
    <% i += 1 %>
    <% break %>
    <% end %>

    <%= link_to r.r_name, restaurant_path(r) %>
    <%= r.address %>
    <%= r.genre %>
  </li>

  <%= @wariai[i] %>
  <% i += 1 %>
  <% end %>

</ul>